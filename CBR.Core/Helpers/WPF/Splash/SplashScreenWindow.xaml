<Window x:Class="CBR.Core.Helpers.Splash.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreenWindow"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Width="400"
        Height="247"
        WindowState="Normal"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" SizeToContent="WidthAndHeight">
    <Grid Background="{x:Null}" Margin="40">
        <ContentControl Content="{Binding Content}" />
        
        <TextBlock TextWrapping="Wrap"
                   Height="25"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Text="{Binding Message}" Margin="0,0,0,40" Foreground="White" FontSize="16" FontWeight="Bold"
                    />
	</Grid>
</Window>
