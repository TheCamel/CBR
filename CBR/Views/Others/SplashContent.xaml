<UserControl x:Class="CBR.Views.SplashContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="300" Height="420">
    <Grid>
    	<Border Background="#FF272727" CornerRadius="30">
    		<Border.Effect>
    			<DropShadowEffect Color="#FF272727" ShadowDepth="25" Opacity="0.66" BlurRadius="25"/>
    		</Border.Effect></Border>
    	<Image Margin="0,22,0,0" Source="/CBR;component/Resources/Images/book128.png" HorizontalAlignment="Center" Height="128" VerticalAlignment="Top"/>
    	<Label Content="Comic Book Reader" Margin="10,191.626,10,190" HorizontalAlignment="Center" FontSize="21.333" Foreground="White" FontWeight="Bold" d:LayoutOverrides="Height"/>
    	<Label Content="Loading..." Margin="10,0,10,145" HorizontalAlignment="Center" FontSize="10" Foreground="White" FontWeight="Bold" VerticalAlignment="Bottom"/>
		<ProgressBar HorizontalAlignment="Center" Margin="0,0,0,126" Name="progressBar1" Width="200" Height="17" VerticalAlignment="Bottom" IsIndeterminate="True" />
	</Grid>
</UserControl>
